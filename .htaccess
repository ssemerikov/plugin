# Apache configuration for ReviewerCertificate plugin
# Increases timeout settings to prevent premature termination during batch operations
#
# Note: This file requires Apache's AllowOverride to be enabled.
# If you don't have AllowOverride, contact your hosting provider.
#
# For Nginx users: This file has no effect. Ask your host to increase:
#   fastcgi_read_timeout 300;
#   proxy_read_timeout 300;
#
# If batch generation still times out, use the CLI tools instead:
# - BATCH_GENERATE_MANUAL.php
# - BATCH_GENERATE_SIMPLE.php

<IfModule mod_php5.c>
    # PHP settings via mod_php
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

<IfModule mod_php7.c>
    # PHP settings via mod_php7
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

<IfModule mod_php8.c>
    # PHP settings via mod_php8
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

<IfModule mod_fcgid.c>
    # FastCGI timeout settings
    # Controls how long Apache waits for FastCGI responses
    FcgidIOTimeout 300
    FcgidBusyTimeout 300
    FcgidIdleTimeout 300
</IfModule>

<IfModule mod_fastcgi.c>
    # Alternative FastCGI module timeout
    FastCgiServer -idle-timeout 300 -flush
</IfModule>

# General Apache timeout
# Note: This is often overridden by server configuration
# and may not work on shared hosting
<IfModule mod_reqtimeout.c>
    # Allow up to 300 seconds for request body
    RequestReadTimeout body=300
</IfModule>

# General server timeout (rarely allowed in .htaccess)
# Uncomment if your host allows it
# TimeOut 300

# Disable output buffering to prevent timeout issues
<IfModule mod_php5.c>
    php_flag output_buffering Off
    php_flag implicit_flush On
</IfModule>

<IfModule mod_php7.c>
    php_flag output_buffering Off
    php_flag implicit_flush On
</IfModule>

<IfModule mod_php8.c>
    php_flag output_buffering Off
    php_flag implicit_flush On
</IfModule>
